#macro(backendServiceWSS $projectName $serviceName $services)##
backend ${projectName}-${serviceName}-cluster-wss
  balance roundrobin
  # websocket protocol validation
  acl hdr_connection_upgrade hdr(Connection)                 -i upgrade
  acl hdr_upgrade_websocket  hdr(Upgrade)                    -i websocket
  acl hdr_websocket_key      hdr_cnt(Sec-WebSocket-Key)      eq 1
  acl hdr_websocket_version  hdr_cnt(Sec-WebSocket-Version)  eq 1
  http-request deny if ! hdr_connection_upgrade ! hdr_upgrade_websocket ! hdr_websocket_key ! hdr_websocket_version

#set($index = 0)##
#foreach($service in $services)##
#if($service.getPortDefinition().getType() == "WSS")##
#set($index = $index+1)##
  server ${projectName}-${serviceName}-wss-${index} ${service.getHost()}:${service.getPort()} maxconn 30000 weight 10 cookie ${projectName}-${serviceName}-wss-${index} check
#end##
#end##

#end##
